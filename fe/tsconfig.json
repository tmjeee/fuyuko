{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "strict": true,
    // "strictNullChecks": true,
    "paths": {                                /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
        "@fuyuko-common/*": ["../common-code/src/*"],
        "@fuyuko-workflow/*": ["../wf/src/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "exclude": [
    "./node_modules/*"
  ]
}
